<h1>Edit Profile</h1>

<form action="/profile/edit?user_id={{user._id}}" method="POST" enctype="multipart/form-data">
  <label for="">Username</label>
  <input type="text" value="{{user.username}}" name="username">
	<br>
  <label for="">First Name</label>
  <input type="text" value="{{user.firstName}}" name="firstName">
	<br>
  <label for="">Lastname</label>
  <input type="text" value="{{user.lastName}}" name="lastName">
	<br>
	<label for="">Email</label>
  <input type="email" value="{{user.email}}" name="email">
	<br>
  <label>Profile Image</label>
  <input type="file" name="photo">
  <br>
  <button class="btn btn-primary mr-3" type="submit">Save</button>
</form>

<button type="button" class="btn btn-light"><a href="/profile">Back to Profile</a></button>