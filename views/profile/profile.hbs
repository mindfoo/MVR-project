<h1>My Profile</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="avatar" src="{{theUser.imgPath}}" alt="{{theUser.imgName}}">
        </div>        
        <div class="row">
            <div class="col-md-4">
                <label>First Name</label>
            </div>
            <div class="col-md-4">
                <p>{{theUser.firstName}}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label>Last Name</label>
            </div>
            <div class="col-md-4">
