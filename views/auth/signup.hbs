<form id="form" action="/signup" method="POST">
  <h2>Signup</h2>
  <div class="form-row">
      <label>First Name:</label>
      <input type="text" name="firstName" placeholder="Your first name" >
      <label>Last Name:</label>
      <input type="text" name="lastName" placeholder="Your last name" >
      <label>Username:</label>
      <input type="text" name="username" placeholder="Your username" >
      <label>E-mail:</label>
      <input type="text" name="email" placeholder="Your e-mail" >
      <label>Password:</label>
      <input id="pass" type="password" name="password" placeholder="******" >
  </div>

  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  
  <button type="submit" class="btn btn-primary">Signup</button>

  <div class="form-group">
    <a class="btn btn-lg btn-google btn-block btn-outline" href="/auth/google">
      <img src="https://img.icons8.com/color/16/000000/google-logo.png"/>Sign up with Google
    </a>
  </div>

  <p class="account-message text-muted">
    Do you have an account? <a href="/login">Login here.</a>
  </p>
</form>