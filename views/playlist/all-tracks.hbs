<h1>Tracks</h1>

<form action="/add-playlist" method="POST">
     <div class="form-group">
          <input class="form-control" type="text" name="artist_name" value="{{ data.artist_name }}" placeholder="{{ data.artist_name }}" />
          <br/>
          {{#each data.allInfo.name }}
               <input class="form-control" type="checkbox" id="song-single" name="song"  value="{{ this }}">
               <label for="" > {{ this }} </label><br/>
          {{/each}} 
          <button type="button" class="btn btn-primary mr-3">Submit</button>
     </div>
</form>

