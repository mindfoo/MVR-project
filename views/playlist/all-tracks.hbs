<form action="/add-playlist" method="POST">

     <div class="wrap-column" style="">
          {{#each data.allInfo.name }}
               <div class="input-group mb-3"><div class="input-group-prepend">
                         <div class="input-group-text">
                              <input type="checkbox" aria-label="Checkbox for following text input" id="song-single" name="song"  value="{{ this }}"/>
                         </div>
                    </div>
                    <input type="text" class="form-control" aria-label="{{ this }}" value="{{ this }}">
               </div>
          {{/each}} 
          <input type="text" name="preview" value="{{data.allInfo.preview}}" style="display: none;"/>
          <input type="text" name="id" value="{{data.allInfo.id}}" style="display: none;"/>
     </div>
     <div class="sticky">
          <button type="submit" class="btn btn-primary">Submit</button>
     </div>
     <input type="text" name="artist_name" value="{{ data.artist_name }}" style="visibility:hidden; display:none;"/>
</form>

  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}

