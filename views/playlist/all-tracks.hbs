<h1>Tracks</h1>

<form action="/add-playlist" method="POST">

     <input type="text" name="artist_name" value={{ data.artist_name }} placeholder="{{ data.artist_name }}" />
<br/>
     {{#each data.allInfo.name }}
          <input type="checkbox" id="song-single" name="song"  value="{{ this }}">
          <label for="" > {{ this }} </label><br/>
     {{/each}} 

     <input type="submit" value="Submit">

</form>

