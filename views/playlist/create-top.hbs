{{!-- Present Results here from API --}}
<section class="result-wrap">
    {{!-- {{#each result}} --}}
        <div class="artist-card card" style="width: 18rem;">
            <h5 class="card-title">{{name}}</h5>
        </div>
    {{!-- {{/each}} --}}
</section>

{{!-- Post choices of songs to database with this POST form --}}
<form action="/playlist/add" method="POST">
    {{!-- {{#each result}} --}}
        <h5 class="song-title">{{name}}</h5>
    {{!-- {{/each}} --}}
  <button type="submit">ADD</button>
</form>
